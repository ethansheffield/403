{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Hugo Serve",
      "type": "shell",
      "command": "hugo",
      "args": ["serve", "--buildDrafts"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {"runOn": "folderOpen"}
    },
    {
      "label": "Build with Search",
      "type": "shell",
      "command": "powershell",
      "args": ["-File", "scripts/build-with-search.ps1"],
      "group": "build"
    }
  ]
}
